
# Password Strength Checker in Python

password = input("Enter your password: ")

has_upper = False
has_lower = False
has_digit = False
has_special = False

special_characters = "!@#$%^&*"

# Checking each character in python
for char in password:
    if char.isupper():
        has_upper = True
    elif char.islower():
        has_lower = True
    elif char.isdigit():
        has_digit = True
    elif char in special_characters:
        has_special = True

    # Checking password strength
if len(password) >= 8 and has_upper and has_lower and has_digit and has_special:
    print("Password Strength: STRONG ğŸ’ª")
elif len(password) >= 6 and (has_upper or has_lower) and has_digit:
    print("Password Strength: MEDIUM ğŸ¤¨")
else:
    print("Password Strength: WEAK âŒ")

